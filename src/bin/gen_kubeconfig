#!/bin/bash

server=$1

rm -f "$HOME"/kube-solo/kube/kubeconfig
kubectl --kubeconfig="$HOME/kube-solo/kube/kubeconfig" config set-cluster k8solo-01 --server=http://$server:8080
kubectl --kubeconfig="$HOME/kube-solo/kube/kubeconfig" config set-context kube-solo --cluster=k8solo-01
kubectl --kubeconfig="$HOME/kube-solo/kube/kubeconfig" config use-context kube-solo
