#!/bin/bash
# kube-solo cli

#
app_path=$(cat ~/kube-solo/.env/resouces_path)

#
start() {
    "${app_path}"/up.command
}

status() {
    echo "$(~/bin/corectl q -a k8solo-01)"
}

ip() {
    echo "$(~/bin/corectl q -i k8solo-01)"
}

ssh() {
    ~/bin/corectl ssh k8solo-01
}

shell() {
    "${app_path}"/os_shell.command
}

usage() {
    echo "Usage: ksolo start|stop|status|ip|ssh|shell"
}


case "$1" in
        start)
                start
                ;;
        stop)
                stop
                ;;
        status)
                status
                ;;
        ip)
                ip
                ;;
        ssh)
                ssh
                ;;
        shell)
                shell
                ;;
        *)
                usage
                ;;
esac
